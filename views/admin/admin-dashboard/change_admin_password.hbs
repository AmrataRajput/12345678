{{> admin_inner_header}}
{{> admin_inner_sidebar}}
<div class="content-wrapper right-side">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                   <section class="content-header">
                    <h3> Change Password </h3>
                   
          </section>
            <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  {{#if expressFlash.fail}}
                    <div class="alert alert-danger">{{expressFlash.fail}}</div>
                  {{/if}}

                  {{#if expressFlash.success}}
                    <div class="alert alert-success">{{expressFlash.success}}</div>
                  {{/if}}
                  <form class="forms-sample" id="edit_user_form" action='/update-password-admin' method='post'>
                    <div class="form-group">
                      <label for="exampleInputName1">Current Password <span style="color: red">*</span></label>
                      <input type="password" name="current_password" class="form-control" id="" placeholder="Current Password" data-rule-required="true" data-msg-required="Please Enter Current Password." value="{{name}}">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">New Password <span style="color: red">*</span></label>
                      <input type="password" name="new_password" class="form-control" id="password" placeholder="New Password" data-rule-required="true" data-msg-required="Please Enter New Password." value="" data-msg-minlength="Please Enter Atleast 6 Letters." data-rule-minlength="6">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Confirm Password <span style="color: red">*</span></label>
                      <input type="password" name="confirm_pwd" class="form-control" id="" placeholder="Confirm Password" data-rule-required="true" data-msg-required="Please Enter Confirm Password." value=""  data-rule-equalto="#password" data-msg-minlength="Please Enter Atleast 6 Letters." data-rule-minlength="6">
                    </div>
                    <div class="form-group">

                      <input type='hidden' name='user_m_id' value="{{user_main_id}}">
                    </div>
                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                    <a href="/admin-dashboard" class="btn btn-light">Cancel</a>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
  {{> admin_inner_footer}}
  <script type="text/javascript">

               $(document).ready(function (){
               $('#edit_user_form').validate({
                     onfocusout: function(element) {
                           this.element(element);
                     },
                     errorClass: 'error_validate',
                     errorElement:'span',
                     highlight: function(element, errorClass) {
                      $(element).removeClass(errorClass);
                     }
                   });

               });
</script>

