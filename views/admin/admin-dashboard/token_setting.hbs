{{> admin_inner_header}}
{{> admin_inner_sidebar}}
<div class="content-wrapper right-side">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                   <section class="content-header">
                    <h3> Update Token Details</h3>
                    <ol class="breadcrumb">
                        <li><a href=""><i class="fa fa-dashboard"></i>Home</a></li>
                        <li><a href="javascript:void(0);">Token setting</a></li>
                        <li><a href="javascript:void(0);" class="active">Update token</a></li>
                    </ol>
          </section>
            <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  {{#if expressFlash.token_fail}}
                    <div class="alert alert-danger">{{expressFlash.token_fail}}</div>
                  {{/if}}

                  {{#if expressFlash.token_success}}
                    <div class="alert alert-success">{{expressFlash.token_success}}</div>
                  {{/if}}
                  <form class="forms-sample" id="edit_user_form" action='/update-token-details' method='post'>
                    <div class="form-group">
                      <label for="exampleInputName1">Token Name</label>
                      <input type="text" name="token_name" class="form-control" id="exampleInputName1" placeholder="Name" data-rule-required="true" data-msg-required="Please Enter Token Name." value="{{escape token_data.token_name}}" onkeypress="return lettersRegOnly(event);">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Total Quantity</label>
                      <input type="text" name="total_quantity" class="form-control" id="" placeholder="Quantity" data-rule-required="true" data-msg-required="Please Enter Quantity." value="{{token_data.token_quantity}}" onkeypress="return isNumdeciKey(event);">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Ether value for each token</label>
                      <input type="text" name="eather_value" class="form-control" id="" placeholder="Eather value" data-rule-required="true" data-msg-required="Please Enter Eather Value" onkeypress="return isNumdeciKey(event);" value="{{token_data.token_eather_value}}">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">Remaining Quantity</label>
                      <input type="text" name="remaining_quantity" class="form-control" id="" placeholder="Remaining Quantity" value="{{token_data.token_remaining_quantity}}" readonly="readonly">
                    </div>

                    <input type="hidden" value="{{token_data._id}}" name="edit_id">
                 
              
                {{!--     <div class="form-group">
                      <label for="exampleInputCity1">City</label>
                      <input type="text" class="form-control" id="exampleInputCity1" placeholder="Location">
                    </div> --}}
                   
                    <button type="submit" class="btn btn-success mr-2">Update</button>
                    <a href="/admin-dashboard" class="btn btn-light">Cancel</a>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
  {{> admin_inner_footer}}
  <script type="text/javascript">

               $(document).ready(function (){
               $('#edit_user_form').validate({
                     onfocusout: function(element) {
                           this.element(element);
                     },
                     errorClass: 'error_validate',
                     errorElement:'span',
                     highlight: function(element, errorClass) {
                      $(element).removeClass(errorClass);
                     }
                   });

               });
</script>
