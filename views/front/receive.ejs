<%- include('../templates/header') %>
<section class="dash-inner-sec">
    <div class="container">
        <div class="row">
             <div class="col-lg-10 offset-lg-1 col-md-12">
                 <div class="dashboard-box">
                     <div class="create-wallet-block">
                            <h3 class="main-heading">Receive</h3>
                            <h4 class="green-heading ">Rowan Energy</h4> 
                            <p class="head-commn-text">Only receive RWN to this address sending any other digital asset, will result in permanent loss.</p>
                          
                    <div class="row">
                         <div class="col-md-10 offset-md-1 col-lg-10 offset-lg-1">
                          <div class="send-rwn-block">
                              <div class="qr-code">
                                 <% if(qr_code_file_name!=undefined){ %>
                                <img src="/wallet_qr_image/<%-qr_code_file_name%>">
                                  <% } %>
                              </div>
                                <div class="input-group input-dash ">
                                     <input class="form-control" type="text" readonly=""  id="wallet_address" value="<% if(walletdetails.wallet_address!='') { %> <%=walletdetails.wallet_address%> <% } %>" >
                                     <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><a href="javascript:void(0);" onclick="myFunction()">Copy</a></span>
                                  </div>
                                </div>    
                              <div class="col-md-12">
                                   <div class="text-center mlti-btn">
                                    <a href="/wallet_qr_image/<%-qr_code_file_name%>" download='qr-image.png' class="btn btn-common light-green">Download</a>
                                </div>
                               </div>
                         </div>
                       </div>
                        </div>
                 </div>
             </div>
        </div>
    </div>
</section>
<%- include('../templates/footer') %>
<script type="text/javascript">
function myFunction() {
  var copyText = document.getElementById("wallet_address");
  if($('#wallet_address').val() !="")
  {
  copyText.select();
  document.execCommand("copy");
  alert("Wallet Address is copied.");
  }  
}  
</script>
