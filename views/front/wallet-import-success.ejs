<%- include('../templates/header') %>
<section class="dash-inner-sec">
    <div class="container">
        <div class="row">
             <div class="col-lg-10 offset-lg-1 col-md-12">
                 <div class="dashboard-box">
                     <div class="create-wallet-block">
                           <h3 class="main-heading">Rowan Energy</h3> 
                           <h4 class="green-heading">Conratulations!</h4>
                           <p class="head-commn-text">Your wallet is Imported successfully.Here is your wallet address.</p>

                             <% if(success_msg!=undefined){ %>
                        <span class="flash_msg" style="color: green;"><%= success_msg %></span>
                        <% }%>
                          <div class="input-group input-dash">
                           
                             <input class="form-control" type="text" id="wallet_address" placeholder="" value="<% if(wallet_address!='') { %><%=wallet_address%><% } %>" readonly="">
                             <div class="input-group-append">
                            <a href="javascript:void(0);" onclick="myFunction()"><span class="input-group-text" id="basic-addon2">Copy</span></a>
                          </div>
                        </div> 


                          <div class="text-center for-success">
                              <a href="/Dashboard" class="btn btn-common light-green">Continue</a>
                          </div>
                        </div>
                 </div>
             </div>
        </div>
    </div>
</section>
<%- include('../templates/footer') %>
<script type="text/javascript">
function myFunction() {
  var copyText = document.getElementById("wallet_address");
  if($('#wallet_address').val() !="")
  {
  copyText.select();
  document.execCommand("copy");
  alert("Wallet Address is copied.");
  }  
}  
</script>
<script type="text/javascript">
$(document).ready(function () {
var flash_msg=$('.flash_msg').html();
if(flash_msg!="" && flash_msg!=undefined)
{
  setTimeout(function(){ $('.flash_msg').html('');},4000);
}    
});
</script>

