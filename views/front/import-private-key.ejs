<%- include('../templates/header') %>
<section class="dash-inner-sec">
    <div class="container">
        <div class="row">
             <div class="col-lg-10 offset-lg-1 col-md-12">
                 <div class="dashboard-box">
                     <div class="create-wallet-block">
                           <h3 class="main-heading ">Rowan Energy</h3> 
                           <h4 class="green-heading ">Import Your Passphrase</h4>
                           <p class="head-commn-text ">Please enter your passphrase below to conÔ¨Årm your wallet account.</p>
                            <form id="submit-passphrase-key" method="post" action="/submit-import">
                          <div class="form-group enter-private-key input-dash ">
                             
                             <input class="form-control" type="text" placeholder="Enter your Passphrase" name="Passphrase" id="Passphrase" data-rule-required="true"  data-msg-required="Please enter Passphrase" autocomplete="off">
                          </div>
                          
                            <% if(err_msg!=undefined){ %>
                        <span class="error_validate flash_msg1"><%= err_msg %></span>
                        <% }%>

                          <div class="clearfix  note-line" style="margin-bottom: 0px !important">
                            <span class="float-left">Whoops, I didn't write my passphrase.</span>

                            <span class="float-right"><a href="/Create-wallet">Create a new wallet</a></span>


                          </div>
                        

                          <div class="text-center">
                               <input type="submit" value="Continue" name="submit" class="btn btn-common light-green" id="submit-key">
                          </div>
                          </form>
                        </div>
                 </div>
             </div>
        </div>
    </div>
</section>
<%- include('../templates/footer') %>
<script src="/assets/js/jquery.validate.min.js"></script>
<script type="text/javascript">
$('#submit-passphrase-key').validate({
      onfocusout: function(element) {
      this.element(element);
      },
      errorClass: 'error_validate',
      errorElement:'span',
      highlight: function(element, errorClass) {
      $(element).removeClass(errorClass);
      },
      submitHandler:function(form)
      {       
      $('#submit-key').attr('disabled',true);
      form.submit();
      }
});
</script> 
<script type="text/javascript">
$(document).ready(function () {
var flash_msg=$('.flash_msg1').html();
if(flash_msg!="" && flash_msg!=undefined)
{
  setTimeout(function(){ $('.flash_msg1').html('');},1000000);
}    
});

 $("#Passphrase").focusin(function(){
  $(".flash_msg1").html("");
});
</script>






